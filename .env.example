# Pose Detection Game Environment Configuration

# Application Settings
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# CORS Configuration
CORS_ORIGIN=*

# Redis Configuration (for session management and caching)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Security Settings
SESSION_SECRET=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# Game Configuration
MAX_PLAYERS_PER_ROOM=4
POSE_DETECTION_CONFIDENCE=0.5
GAME_TICK_RATE=60

# Performance Settings
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT=30000

# Monitoring and Logging
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Settings (only for NODE_ENV=development)
HOT_RELOAD=true
DEBUG_MODE=true

# Production Settings (only for NODE_ENV=production)
COMPRESSION_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# SSL/TLS Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Database Configuration (if using a database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pose_detection_game
DB_USER=postgres
DB_PASSWORD=

# Cloud Configuration (if deploying to cloud)
CLOUD_PROVIDER=
CLOUD_REGION=
CLOUD_INSTANCE_TYPE=

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30